{
  "version": 2,
  "builds": [
    { "src": "backend/server.ts", "use": "@vercel/node" },
    { "src": "frontend", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend" }, 
    { "src": "/(.*)", "dest": "frontend" }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/" }]
}